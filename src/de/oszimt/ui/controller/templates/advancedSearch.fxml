<fx:root type="javafx.scene.layout.StackPane" xmlns:fx="http://javafx.com/fxml">
	<AnchorPane>
		<Separator AnchorPane.leftAnchor="0" AnchorPane.topAnchor="2" AnchorPane.rightAnchor="0" /> 
		
		<!-- Alle Felder aus der Hauptanwendung in einer HBox nebeneinander angeordnet -->
		<HBox AnchorPane.leftAnchor="0" AnchorPane.topAnchor="15" spacing="0">
				<TextField promptText="Vorname" fx:id="vornameField" />
				<TextField promptText="Nachname" fx:id="nachnameField" />
				<DatePicker promptText="Geburtstag" maxHeight="30" fx:id="geburtstagField" />
				<TextField promptText="Stadt" fx:id="ortField" />
				<TextField promptText="PLZ" fx:id="plzField" />
				<TextField promptText="Strasse" fx:id="strasseField" />
				<TextField promptText="Nummer" fx:id="strassenNummerField" />
		</HBox>		
	</AnchorPane>
</fx:root>